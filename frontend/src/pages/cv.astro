---
import { Layout } from '$layouts';
import {
		WorkExperienceItem,
		EducationItem,
		KeywordList,
		Languages,
		Certifications,
		ContactButton
	} from '$components';
import { imagePlaceholder } from '$lib/utils'
const src = imagePlaceholder(350,450);
---

<Layout title="Curriculum">
	<main id="curriculum" class="pt-10">
		<section class="py-3">
			<div id="desktop-first-look" class="hidden md:flex justify-between">
				<img {src} alt="Nicolas Matute" />
				<div>
					<h1>Nicolas Matute</h1>
					<ul>
						<li>bla</li>
						<li>bla</li>
						<li>bla</li>
					</ul>
					<ContactButton />
				</div>
			</div>
			<div id="mobile-first-look" class="md:hidden max-md:flex justify-between">
				<p>mobile stuff</p>
			</div>
		<section>
	
		<section class="py-3">
			<h2>Work Experience</h2>
			<WorkExperienceItem />
		<section>
	
		<section class="py-3">
			<h2>Education</h2>
			<EducationItem />
		<section>
	
		<section class="py-3">
			<h2>Tools - Skills</h2>
			<KeywordList />
		<section>
	
		<section class="py-3">
			<h2>Languages</h2>
			<Languages />
		<section>
	
		<section class="py-3">
			<h2>Certifications</h2>
			<Certifications />
		<section>
	</main>
</Layout>