---
import { Layout } from '$layouts';
import {
		WorkExperienceItem,
		EducationItem,
		KeywordList,
		Languages,
		Certifications,
		ContactButton,
		MobileSection
	} from '$components';
import { imagePlaceholder } from '$lib/utils'
---

<style>
	
</style>

<Layout title="Curriculum">
	<main id="curriculum" class="pt-10">
		<section id="first" class="mt-5">
			<div
				id="desktop-first-look"
				class="hidden md:flex justify-center space-x-24"
			>
				<div class="w-1/2 flex justify-end">
					<img src={ imagePlaceholder(400,450) } 
						alt="Nicolas Matute" class="h-auto w-3/4" />
				</div>
				<div class="w-1/2 flex flex-col justify-center items-center">
					<div class="flex flex-col justify-center items-center">
						<h1 class="font-bold mb-4 md:text-4xl lg:text-5xl xl:text-6xl">
							Nicolas Matute
						</h1>
						<h2 class="font-medium mb-4 text-2xl lg:text-3xl xl:text-4xl">
							Curriculum Vitae
						</h2>
					</div>
					<ul class="list-none flex flex-col py-5">
						<li class="flex items-center py-2">
							<img
							src={imagePlaceholder(16)}
							alt="Professional Experience"
							class="w-4 h-4 mr-2"
							/>
							<span>Professional Experience</span>
						</li>
						<li class="flex items-center py-2">
							<img
							src={imagePlaceholder(16)}
							alt="Education"
							class="w-4 h-4 mr-2"
							/>
							<span>Education Summary</span>
						</li>
						<li class="flex items-center py-2">
							<img
							src={imagePlaceholder(16)}
							alt="Tools, Skills and Languages"
							class="w-4 h-4 mr-2"
							/>
							<span>Tools, Skills and Languages</span>
						</li>
					</ul>
					<ContactButton />
				</div>
			</div>
			<MobileSection title="Curriculum Vitae" />
		</section>
	
		<section class="cv-section mt-20 pt-10 flex flex-col">
			<h2 
				class="font-bold mb-10 text-2xl
				text-center self-center
				w-1/3 border-b-2 border-secondary
				md:text-3xl lg:text-4xl xl:text-5xl"
			>Work Experience</h2>
			<WorkExperienceItem />
		</section>
	
		<section class="cv-section mt-20 pt-10 flex flex-col">
			<h2 
				class="font-bold mb-10 text-2xl
				text-center self-center
				w-1/3 border-b-2 border-secondary
				md:text-3xl lg:text-4xl xl:text-5xl"
			>Education</h2>
			<EducationItem />
		</section>

		<section class="cv-section mt-20 pt-10 flex flex-col">
			<h2 
				class="font-bold mb-10 text-2xl
				text-center self-center
				w-1/3 border-b-2 border-secondary
				md:text-3xl lg:text-4xl xl:text-5xl"
			>Certifications</h2>
			<Certifications />
		</section>
	
		<section class="cv-section mt-20 pt-10 flex flex-col">
			<h2 
				class="font-bold mb-10 text-2xl
				text-center self-center
				w-1/3 border-b-2 border-secondary
				md:text-3xl lg:text-4xl xl:text-5xl"
			>Tools & Skills</h2>
			<KeywordList />
		</section>
	
		<section class="cv-section mt-20 pt-10 flex flex-col pb-10">
			<h2 
				class="font-bold mb-10 text-2xl
				text-center self-center
				w-1/3 border-b-2 border-secondary
				md:text-3xl lg:text-4xl xl:text-5xl"
			>Languages</h2>
			<Languages />
		</section>
	</main>
</Layout>